{
  "name": "hudu-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol server for Hudu IT documentation platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t hudu-mcp-server .",
    "docker:run": "docker run --env-file .env -it hudu-mcp-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose build --no-cache"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hudu",
    "it-documentation",
    "password-management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.7.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "tsx": "^4.15.7",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
