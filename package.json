{
  "name": "hudu-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol server for Hudu IT documentation platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t hudu-mcp-server .",
    "docker:run": "docker run --env-file .env -it hudu-mcp-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose build --no-cache"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hudu",
    "it-documentation",
    "password-management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "ws": "^8.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.11",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tsx": "^4.15.7",
    "typescript": "^5.9.2"
  }
}
